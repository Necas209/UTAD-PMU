<Window x:Class="WPFApp8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp8"
        mc:Ignorable="d"
                Title="Gestão de Escolas" Height="200" Width="268" Loaded="Window_Loaded">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Escola:" VerticalAlignment="Top" />
        <TextBlock x:Name="tbEscola" HorizontalAlignment="Left" Margin="50,10,0,0" TextWrapping="Wrap" Text="Obtendo os dados..." IsEnabled="False" Width="180" VerticalAlignment="Top" />
        <GroupBox x:Name="groupBox" Header="Departamento" HorizontalAlignment="Left" Margin="10,44,0,0" VerticalAlignment="Top" Height="64" Width="230">
            <ComboBox x:Name="cbDepartamentos" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="200" SelectionChanged="cbDepartamentos_SelectionChanged" />
        </GroupBox>
        <StatusBar HorizontalAlignment="Left" Height="24" Margin="10,140,0,0" VerticalAlignment="Top" Width="240">
            <StatusBarItem x:Name="sbiNDocentes" Content="Selecionar departamento..." Height="24" VerticalAlignment="Top" RenderTransformOrigin="4,0.240" />
        </StatusBar>
    </Grid>
</Window>
